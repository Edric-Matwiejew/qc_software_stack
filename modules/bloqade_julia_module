-- -*- lua -*-
help([[
Package for the quantum computation and quantum simulation based on the neutral-atom architecture.
]])

whatis("Name: Bloqade")
whatis("Version: BLOQADEJULIAVERSION")
whatis("Documentation: https://queracomputing.github.io/Bloqade.jl/dev/")

if not isloaded("julia/JULIAVERSION") then
    load("julia/JULIAVERSION")
end
depends_on("julia/JULIAVERSION")

-- Julia will write to the first path, so appending here.
append_path("JULIA_DEPOT_PATH", "BLOQADEJULIADEPOTPATH")
append_path("JULIA_LOAD_PATH", "BLOQADEJULIAPROJECTPATH")


