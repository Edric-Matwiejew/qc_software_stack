-- -*- lua -*-
help([[
GNU Automake is a tool for automatically generating Makefile.in files compliant with the GNU Coding Standards.
]])

whatis("Name: AUTOMAKE AUTOMAKEVERSION")
whatis("Documentation: https://www.gnu.org/software/automake/")

load("autoconf")

local AUTOMAKE_ROOT = "AUTOMAKEROOT"

setenv("AUTOMAKE_ROOT", AUTOMAKE_ROOT)
prepend_path("PATH", pathJoin(AUTOMAKE_ROOT, "bin/"))
prepend_path("MANPATH", pathJoin(AUTOMAKE_ROOT, "share/man"))
prepend_path("INFOPATH", pathJoin(AUTOMAKE_ROOT, "share/info"))
prepend_path("CMAKE_PREFIX_PATH", AUTOMAKE_ROOT)
